  "license": "MIT",
  "scripts": {
    "dev": "node server-dev.js",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server --outDir dist/server",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix ./",
    "lint:style": "stylelint --fix \"src/**/*.{css,scss}\"",
    "postinstall": "husky install",
    "preview": "vite preview"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "npm run lint:script",
      "git add ."
    ],
    "**/*.{scss,css}": [
      "npm run lint:style",
      "git add ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Peachick/vite-vue-framework.git"
  },
  "homepage": "https://github.com/Peachick/vite-vue-framework",
  "bugs": {
    "url": "https://github.com/Peachick/vite-vue-framework/issues"
  },
