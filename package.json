    "@types/node": "^17.0.33",
    "@vue/server-renderer": "^3.2.31",
    "@vueuse/core": "^8.2.5",
    "koa": "^2.13.4",
    "koa-connect": "^2.1.0",
    "koa-send": "^5.0.1",
    "pinia": "^2.0.13",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
